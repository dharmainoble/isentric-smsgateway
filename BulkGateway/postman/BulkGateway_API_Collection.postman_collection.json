{
	"info": {
		"_postman_id": "bulk-gateway-api-collection",
		"name": "BulkGateway API",
		"description": "REST API collection for BulkGateway SMS message management system",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:9090/api",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health & Info",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": ["{{baseUrl}}"],
							"path": ["health"]
						},
						"description": "Check if the application is running and healthy"
					},
					"response": []
				},
				{
					"name": "Application Info",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/info",
							"host": ["{{baseUrl}}"],
							"path": ["info"]
						},
						"description": "Get application information"
					},
					"response": []
				},
				{
					"name": "Home",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/",
							"host": ["{{baseUrl}}"],
							"path": [""]
						},
						"description": "Welcome endpoint"
					},
					"response": []
				}
			]
		},
		{
			"name": "Messages - INSERT Operations",
			"item": [
				{
					"name": "Create Single Message (INSERT)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"sender\": \"john@example.com\",\n    \"recipient\": \"jane@example.com\",\n    \"content\": \"Hello Jane! This is a test message from Postman.\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/messages",
							"host": ["{{baseUrl}}"],
							"path": ["messages"]
						},
						"description": "Insert a new message into the database"
					},
					"response": []
				},
				{
					"name": "Create Bulk Messages (BULK INSERT)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "[\n    {\n        \"sender\": \"marketing@company.com\",\n        \"recipient\": \"customer1@example.com\",\n        \"content\": \"Special offer just for you!\"\n    },\n    {\n        \"sender\": \"marketing@company.com\",\n        \"recipient\": \"customer2@example.com\",\n        \"content\": \"Don't miss our sale!\"\n    },\n    {\n        \"sender\": \"marketing@company.com\",\n        \"recipient\": \"customer3@example.com\",\n        \"content\": \"New products available now!\"\n    },\n    {\n        \"sender\": \"notifications@system.com\",\n        \"recipient\": \"user@example.com\",\n        \"content\": \"Your order has been shipped.\"\n    },\n    {\n        \"sender\": \"alerts@system.com\",\n        \"recipient\": \"admin@example.com\",\n        \"content\": \"System maintenance scheduled.\"\n    }\n]"
						},
						"url": {
							"raw": "{{baseUrl}}/messages/bulk",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "bulk"]
						},
						"description": "Insert multiple messages at once into the database"
					},
					"response": []
				}
			]
		},
		{
			"name": "Messages - SELECT Operations",
			"item": [
				{
					"name": "Get All Messages (SELECT *)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages",
							"host": ["{{baseUrl}}"],
							"path": ["messages"]
						},
						"description": "Retrieve all messages from the database"
					},
					"response": []
				},
				{
					"name": "Get Message by ID (SELECT WHERE id)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/1",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "1"]
						},
						"description": "Retrieve a specific message by its ID"
					},
					"response": []
				},
				{
					"name": "Get Messages by Sender (SELECT WHERE sender)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/sender/john@example.com",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "sender", "john@example.com"]
						},
						"description": "Retrieve all messages from a specific sender"
					},
					"response": []
				},
				{
					"name": "Get Messages by Recipient (SELECT WHERE recipient)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/recipient/jane@example.com",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "recipient", "jane@example.com"]
						},
						"description": "Retrieve all messages for a specific recipient"
					},
					"response": []
				},
				{
					"name": "Get Messages by Status (SELECT WHERE status)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/status/PENDING",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "status", "PENDING"]
						},
						"description": "Retrieve all messages with a specific status (PENDING, SENT, DELIVERED, FAILED)"
					},
					"response": []
				},
				{
					"name": "Count Messages by Status (SELECT COUNT)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/count/status/PENDING",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "count", "status", "PENDING"]
						},
						"description": "Count the number of messages with a specific status"
					},
					"response": []
				}
			]
		},
		{
			"name": "Messages - UPDATE Operations",
			"item": [
				{
					"name": "Update Message (UPDATE)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"sender\": \"updated_sender@example.com\",\n    \"recipient\": \"updated_recipient@example.com\",\n    \"content\": \"This message has been updated via Postman!\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/messages/1",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "1"]
						},
						"description": "Update an existing message by ID"
					},
					"response": []
				},
				{
					"name": "Update Message Status (UPDATE status)",
					"request": {
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/1/status?status=SENT",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "1", "status"],
							"query": [
								{
									"key": "status",
									"value": "SENT",
									"description": "New status: PENDING, SENT, DELIVERED, FAILED"
								}
							]
						},
						"description": "Update only the status of a message"
					},
					"response": []
				},
				{
					"name": "Update Message Status to DELIVERED",
					"request": {
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/1/status?status=DELIVERED",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "1", "status"],
							"query": [
								{
									"key": "status",
									"value": "DELIVERED"
								}
							]
						},
						"description": "Mark a message as delivered"
					},
					"response": []
				},
				{
					"name": "Update Message Status to FAILED",
					"request": {
						"method": "PATCH",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/2/status?status=FAILED",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "2", "status"],
							"query": [
								{
									"key": "status",
									"value": "FAILED"
								}
							]
						},
						"description": "Mark a message as failed"
					},
					"response": []
				}
			]
		},
		{
			"name": "Messages - DELETE Operations",
			"item": [
				{
					"name": "Delete Message (DELETE)",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/messages/1",
							"host": ["{{baseUrl}}"],
							"path": ["messages", "1"]
						},
						"description": "Delete a message by ID"
					},
					"response": []
				}
			]
		},
